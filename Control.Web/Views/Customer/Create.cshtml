@using Control.Entities.Models.Entites
@model Customer
@{
    ViewBag.Title = "Yeni Müşteri Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title
                        </header>
                        <div class="panel-body">
                            <div class="form">
                                <form class="cmxform form-horizontal tasi-form" id="signupForm" method="post" enctype="multipart/form-data" action="">
                                    @using (Html.BeginForm("Create", "Customer", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()                                       
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Ödeme Sistemi: *</label>
                                            <div class="col-lg-10">
                                                @Html.DropDownListFor(i => i.PaymentId, new SelectList(ViewBag.Payments, "Id", "Name", new { @class = "form-control" }))
                                                @Html.ValidationMessageFor(i => i.PaymentId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <hr />
                                        <h3><label class="label label-info">Müşteri Bilgileri</label></h3>
                                        <hr />
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Adı-Soyadı</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="NameSurname" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Şirket Adı</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="CompanyName" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Müşteri Ünvanı</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="Title" type="text" required />
                                            </div>
                                        </div>
                                        <hr />
                                        <h3><label class="label label-info">Müşteri İletişim</label></h3>
                                        <hr />
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Adresi</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="CustomerInfo.Address" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Posta Kodu</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="CustomerInfo.PostalCode" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Telefon Numarası</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="CustomerInfo.PhoneNumber" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Fax Numarası</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="CustomerInfo.Fax" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Mail Adresi</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="CustomerInfo.MailAddress" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">İntenet Sitesi</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="CustomerInfo.WebSite" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Ülke Listesi: *</label>
                                            <div class="col-lg-10">
                                                @Html.DropDownListFor(i => i.CountryId, new SelectList(ViewBag.Countries, "Id", "Name", new { @class = "form-control" }))
                                                @Html.ValidationMessageFor(i => i.CountryId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Eyalet-Bölge Listesi: *</label>
                                            <div class="col-lg-10">
                                                @Html.DropDownListFor(i => i.ProvinceId, new SelectList(ViewBag.Provinces, "Id", "Name", new { @class = "form-control" }))
                                                @Html.ValidationMessageFor(i => i.ProvinceId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Şehir Listesi: *</label>
                                            <div class="col-lg-10">
                                                @Html.DropDownListFor(i => i.CityId, new SelectList(ViewBag.Cities, "Id", "Name", new { @class = "form-control" }))
                                                @Html.ValidationMessageFor(i => i.CityId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="form-group">
                                            <div class="col-lg-offset-2 col-lg-10">
                                                <button class="btn btn-primary" type="submit">Müşteri Bilgilerini Ekle</button>
                                                <a href="~/Customer/Index"><button class="btn btn-danger" type="button">İptal Et</button></a>
                                            </div>
                                        </div>
                                    }
                                </form>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>