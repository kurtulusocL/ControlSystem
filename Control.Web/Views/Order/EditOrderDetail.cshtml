@using Control.Entities.Models.Entites
@model OrderDetail
@{
    ViewBag.Title = "Sipariş Detay Bilgisini Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title
                        </header>
                        <div class="panel-body">
                            <div class="form">
                                <form class="cmxform form-horizontal tasi-form" id="signupForm" method="post" enctype="multipart/form-data" action="">
                                    @using (Html.BeginForm("EditOrderDetail", "Order", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()

                                        <h3><label class="label label-info">Sipariş Detay Bilgileri</label></h3>
                                        <hr />
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Fiyatı</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="Price" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Miktarı</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="Quantity" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">İndirim Oranı</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="Discount" type="text" required />
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="form-group">
                                            <div class="col-lg-offset-2 col-lg-10">
                                                <button class="btn btn-primary" type="submit">Sipariş Detay Bilgilerini Güncelle</button>
                                                <a href="~/Order/Index"><button class="btn btn-danger" type="button">İptal Et</button></a>
                                            </div>
                                        </div>
                                    }
                                </form>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>