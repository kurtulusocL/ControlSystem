@using Control.Entities.Models.Entites
@model Order
@{
    ViewBag.Title = "Yeni Sipariş Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title
                        </header>
                        <div class="panel-body">
                            <div class="form">
                                <form class="cmxform form-horizontal tasi-form" id="signupForm" method="post" enctype="multipart/form-data" action="">
                                    @using (Html.BeginForm("Create", "Order", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Kategori Listesi: *</label>
                                            <div class="col-lg-10">
                                                @Html.DropDownListFor(i => i.CategoryId, new SelectList(ViewBag.Categories, "Id", "Name", new { @class = "form-control" }))
                                                @Html.ValidationMessageFor(i => i.CategoryId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <hr />
                                        <h4><label class="label label-primary">Sipariş Bilgileri</label></h4>
                                        <hr />
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Sipariş No</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="OrderNo" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Sipariş Tarihi</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="ShippedDate" type="date" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Teslim Tarihi</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="RequiredDate" type="date" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Sipariş Adresi</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="ShipAddress" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Posta Kodu</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="ShipPostalCode" type="text" required />
                                            </div>
                                        </div>
                                        <hr />
                                        <h4><label class="label label-primary">Müşteri Bilgileri</label></h4>
                                        <hr />
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Müşteri Adı-Soyadı</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="Customer.NameSurname" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Firma Adı</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="Customer.CompanyName" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Müşteri Ünvanı</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="Customer.Title" type="text" required />
                                            </div>
                                        </div>
                                        <hr />
                                        <h4><label class="label label-primary">Müşteri İletişim Bilgileri</label></h4>
                                        <hr />
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Adresi</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="Customer.CustomerInfo.Address" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Posta Kodu</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="Customer.CustomerInfo.PostalCode" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Telefon Numarası</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="Customer.CustomerInfo.PhoneNumber" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Fax Numarası</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="Customer.CustomerInfo.Fax" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Mail Adresi</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="Customer.CustomerInfo.MailAddress" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">İntenet Sitesi</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="Customer.CustomerInfo.WebSite" type="text" required />
                                            </div>
                                        </div>
                                        <hr />
                                        <h4><label class="label label-primary">Ülke, Bölge, Şehir ve Nakliye Seçimi</label></h4>
                                        <hr />
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Ülke Listesi: *</label>
                                            <div class="col-lg-10">
                                                @Html.DropDownListFor(i => i.CountryId, new SelectList(ViewBag.Countries, "Id", "Name", new { @class = "form-control" }))
                                                @Html.ValidationMessageFor(i => i.CountryId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Eyalet-Bölge Listesi: *</label>
                                            <div class="col-lg-10">
                                                @Html.DropDownListFor(i => i.ProvinceId, new SelectList(ViewBag.Provinces, "Id", "Name", new { @class = "form-control" }))
                                                @Html.ValidationMessageFor(i => i.ProvinceId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Şehir Listesi: *</label>
                                            <div class="col-lg-10">
                                                @Html.DropDownListFor(i => i.CityId, new SelectList(ViewBag.Cities, "Id", "Name", new { @class = "form-control" }))
                                                @Html.ValidationMessageFor(i => i.CityId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Nakliye Listesi: *</label>
                                            <div class="col-lg-10">
                                                @Html.DropDownListFor(i => i.ShipperId, new SelectList(ViewBag.Shippers, "Id", "Name", new { @class = "form-control" }))
                                                @Html.ValidationMessageFor(i => i.ShipperId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Ödeme Sistemi Listesi: *</label>
                                            <div class="col-lg-10">
                                                @Html.DropDownListFor(i => i.Customer.PaymentId, new SelectList(ViewBag.Payments, "Id", "Name", new { @class = "form-control" }))
                                                @Html.ValidationMessageFor(i => i.Customer.PaymentId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="form-group">
                                            <div class="col-lg-offset-2 col-lg-10">
                                                <button class="btn btn-primary" type="submit">Sipariş Bilgilerini Ekle</button>
                                                <a href="~/Order/Index"><button class="btn btn-danger" type="button">İptal Et</button></a>
                                            </div>
                                        </div>
                                    }
                                </form>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>