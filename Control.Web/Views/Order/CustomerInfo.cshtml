@using Control.Entities.Models.Entites
@model Order
@{
    ViewBag.Title = "Müşteri Bilgisi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-sm-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title || <a href="~/Order/Index" class="btn btn-primary">Sipariş Listesi</a> || <a href="~/Order/Delete/@Model.Id" class="btn btn-danger">Müşteri Bilgisini Sil</a>
                        </header>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Adı-Soyadı</th>
                                    <th>Şirket Adı</th>
                                    <th>Ünvanı</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>@Model.Customer.NameSurname</td>
                                    <td>@Model.Customer.CompanyName</td>
                                    <td>@Model.Customer.Title</td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>